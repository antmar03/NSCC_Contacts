<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.androidproject.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_create_contact"
        android:name="com.example.androidproject.ui.add_contact.AddContact"
        android:label="@string/title_create_contact"
        tools:layout="@layout/fragment_add_contact" />

    <fragment
        android:id="@+id/navigation_contacts"
        android:name="com.example.androidproject.ui.contacts.ContactsFragment"
        android:label="@string/title_contacts"
        tools:layout="@layout/fragment_contacts" />

    <fragment
        android:id="@+id/navigation_credits"
        android:name="com.example.androidproject.ui.credits.Credits"
        android:label="@string/title_credits"
        tools:layout="@layout/fragment_credits" />
</navigation>